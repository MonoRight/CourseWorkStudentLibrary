@model IEnumerable<WEB.Models.BookViewModel>

@{
    ViewBag.Title = "Пошук книг";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body>
    <h2 class="clearfix">Пошук книг</h2>
    @using (Html.BeginForm())
    {
        <br />
        <div>
            Назва: @Html.TextBox("name") <br />
            Автор: @Html.TextBox("author")<br />
            <input type="submit" value="Знайти" />
        </div>
        <br />
    }
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author)
                </td>
                <td>
                    @Html.ActionLink("Змінити", "UpdateBook", new { id = item.Id }) |
                    @Html.ActionLink("Деталі", "GetBookById", new { id = item.Id }) |
                    @Html.ActionLink("Видалити", "DeleteBookById", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</body>
</html>
