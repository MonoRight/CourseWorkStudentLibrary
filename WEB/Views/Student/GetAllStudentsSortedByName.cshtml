@model IEnumerable<WEB.Models.StudentViewModel>

@{
    ViewBag.Title = "Список студентів";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body>
    <p>
        @Html.ActionLink("Список студентів", "GetAllStudents")
    </p>
    <p>
        @Html.ActionLink("Список студентів відсортованих за прізвищем", "GetAllStudentsSortedBySurname")
    </p>
    <p>
        @Html.ActionLink("Список студентів відсортованих за групою", "GetAllStudentsSortedByGroup")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GroupName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GroupName)
                </td>
                <td>
                    @Html.ActionLink("Змінити", "UpdateStudent", new { id = item.Id }) |
                    @Html.ActionLink("Деталі", "GetStudentById", new { id = item.Id }) |
                    @Html.ActionLink("Видалити", "DeleteStudentById", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</body>
</html>
