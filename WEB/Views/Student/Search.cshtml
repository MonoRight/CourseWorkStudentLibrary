@model IEnumerable<WEB.Models.StudentViewModel>

@{
    ViewBag.Title = "Пошук студентів";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body>
    <h2 class="clearfix">Пошук студентів</h2>
    @using (Html.BeginForm())
    {
        <br />
        <div>
            Ім'я: &emsp; &emsp; @Html.TextBox("name") <br />
            Прізвище: @Html.TextBox("surname")<br />
            Група: &ensp;  &ensp; @Html.TextBox("groupName")<br />
            <input type="submit" value="Знайти" />
        </div>
        <br />
    }
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GroupName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GroupName)
                </td>
                <td>
                    @Html.ActionLink("Змінити", "UpdateStudent", new { id = item.Id }) |
                    @Html.ActionLink("Деталі", "GetStudentById", new { id = item.Id }) |
                    @Html.ActionLink("Видалити", "DeleteStudentById", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</body>
</html>
